<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/css/skeleton.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <nav>
        <a asp-controller="Home" asp-action="Index" class="three columns" id="navbar" >Home</a>
        <a asp-controller="Panel" asp-action="Edit" class="three columns" id="navbar" >New Post</a>

        <a asp-controller="Panel" asp-action="Index" class="three columns" id="navbar" >Admin Panel</a>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Auth" asp-action="Logout" class="three columns" id="navbar" >Logout</a>
        }
        else
        {
            <a asp-controller="Auth" asp-action="Login" class="three columns" id="navbar" >Sign In</a>
        }

        </nav>
    </div>

    <div>
        @RenderBody()
    </div>
</body>
</html>
